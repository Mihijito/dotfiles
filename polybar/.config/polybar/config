[colors]
background = #2e3440
background-alt = #3b4252
foreground = #d8dee9
foreground-alt = #e5e9f0
primary = #88c0d0
alert = #bf616a

[bar/top]
width = 100%
height = 32
radius = 0.0

module-margin = 1

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Iosevka:pixelsize=10;0"
font-1 = "Material Design Icons:size=10:2"

line-size = 0
overline-size = 0
underline-size = 0

border-size = 0

padding-left = 0
padding-right = 2

modules-left = bspwm
modules-center = date 
modules-right = battery pulseaudio wlan powermenu 

tray-position = 
tray-padding = 0

[module/bspwm]
type = internal/bspwm

label-focused = 利
label-focused-foreground = ${colors.primary}
label-focused-padding = 2

label-occupied = 利
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = 吏
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2

[module/date]
type = internal/date

date = %d.%m.%Y%
time = %H:%M

format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}

label = %time%, %date%

[module/xwindow]
type = internal/xwindow
label = %title%

[module/wlan]
type = internal/network
interface = wlp2s0
format-connected = <ramp-signal>
label-connected = %essid%

format-disconnected = 來

ramp-signal-0 = 冷
ramp-signal-1 = 爛
ramp-signal-2 = 嵐
ramp-signal-3 = 襤
ramp-signal-4 = 蠟
ramp-signal-foreground = ${colors.foreground-alt}

[module/spotify]
type = custom/script
interval = 1
format-prefix = "Now playing: "
format = <label>
exec = python ~/.config/polybar/scripts/spotify_status.py -f "{song} by {artist}"

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 串
label-open-foreground = ${colors.foreground}
label-close = cancel
label-close-foreground = ${colors.foreground}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume>
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
use-ui-max = true
interval = 5

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

